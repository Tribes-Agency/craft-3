{% minify %}

   <!doctype html>
   <html class="no-js" lang="{{ craft.app.language|slice(0,2) }}">
      <head>

         <meta charset="utf-8">
         <meta http-equiv="x-ua-compatible" content="ie=edge">
         <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
         
         {% if craft.app.config.env != 'production' %}
            <meta name="robots" content="noindex">
         {% endif %}

         {# Preload Fonts #}
         {% set preloadedFonts = [] %}
         {% for font in preloadedFonts %}
            <link rel="preload" href="/dist/fonts/{{ font }}.woff2" as="font" crossorigin>
         {% endfor %}

         {# CSS #}
         {{ craft.twigpack.includeCssModule("main.css", true) }}

         {# Favicons #}
         {{ source('_components/favicons', ignore_missing = true) }}

      </head>

      <body>

         <div id="app">
            <HelloWorld></HelloWorld>
            Test
            {% block body %}{% endblock %}
         </div>
         
         {# Javascript #}
         {{ craft.twigpack.includeJsModule("main.js", true) }}

      </body>

   </html>

{% endminify %}
